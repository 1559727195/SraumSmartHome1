<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:slideswitch="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/icon_t_back" />

        <TextView
            android:id="@+id/toolbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设备共享"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/input_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/x8"
            android:paddingTop="@dimen/y8"
            android:paddingBottom="@dimen/y8"
            android:src="@drawable/icon_bianji" />

        <ImageView
            android:id="@+id/load_app_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x8"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/input_phonenumber"
            android:src="@drawable/icon_erweima" />
    </RelativeLayout>

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:id="@+id/swipemenu_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/white"
        app:ios="false"
        app:leftSwipe="true"
        app:swipeEnable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/x10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="我"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1869320****"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/x10">


                <com.massky.sraumsmarthome.widget.SlideSwitchButton
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/y20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    slideswitch:isOpen="true"
                    slideswitch:themeColor="#f200aa96" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="@dimen/x50"
                    android:layout_height="match_parent"
                    android:background="#FF0202"
                    android:text="删除"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginTop="@dimen/y1"
        android:background="@color/white"
        app:ios="false"
        app:leftSwipe="true"
        app:swipeEnable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/x10">

                <TextView
                    android:id="@+id/hand_device_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="老婆"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/hand_gateway_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="189155****"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/x10">
                <com.massky.sraumsmarthome.widget.SlideSwitchButton
                    android:id="@+id/slide_btn"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/y20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    slideswitch:isOpen="true"
                    slideswitch:themeColor="#f200aa96" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="@dimen/x50"
                    android:layout_height="match_parent"
                    android:background="#FF0202"
                    android:text="删除"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</LinearLayout>
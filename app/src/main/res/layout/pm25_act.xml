<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#33CCCC"
    android:id="@+id/root_layout"
    android:layout_height="match_parent">
    <!--<com.yanzhenjie.statusview.StatusView-->
        <!--android:id="@+id/status_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#33CCCC"-->
        <!--app:fitsView="@+id/root_layout" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/y8"
        android:layout_height="@dimen/y30">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:paddingRight="@dimen/x20"
            android:src="@drawable/icon_t_back" />
        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="pm2.5"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
        android:id="@+id/next_step_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x8"
        android:layout_marginTop="@dimen/y8"
        android:text="保存"
        android:textSize="14sp"
        android:textColor="@color/blue_txt"
        />
    </RelativeLayout>
    <com.mcxtzhang.pm25progressbar.ColorArcProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/bar2"
        app:is_need_content="true"
        app:front_color1="#8BCD1E"
        app:front_color2="#F6DD1A"
        app:front_color3="#FE1303"
        app:front_color4="#450F6C"
        app:front_color5="#2B0A2A"
        app:max_value="500"
        app:back_width="2dp"
        app:front_width="20dp"
        app:total_engle="330"
        app:is_need_unit="true"
        app:string_unit="空气:优"
        app:is_need_dial="true"
        app:is_need_title="true"
        app:string_title="PM2.5"
        app:back_color="@android:color/darker_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <!--<com.massky.sraumsmarthome.widget.ChartView-->
            <!--android:id="@+id/chartview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/y120"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginBottom="@dimen/y5"-->
            <!--app:bgcolor="#ffffff"-->
            <!--app:interval="30dp"-->
            <!--app:isScroll="false"-->
            <!--app:linecolor="#02bbb7"-->
            <!--app:xylinecolor="#7e7e7e"-->
            <!--app:xylinewidth="1dp"-->
            <!--app:xytextcolor="#7e7e7e"-->
            <!--app:xytextsize="12sp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/sleep_pm"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sleep"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x5"
                    android:textColor="@color/blue_txt"
                    android:text="睡眠模式"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/history_pm"
                android:gravity="center"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_pm_shuju"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x5"
                    android:textColor="@color/blue_txt"
                    android:text="历史数据"/>
            </LinearLayout>
        </LinearLayout>
        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/y5"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
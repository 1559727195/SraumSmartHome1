<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F6F7FA"
    android:layout_height="match_parent">
    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/icon_t_back" />
        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择执行结果"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/next_step_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x8"
            android:layout_marginTop="8dp"
            android:text="下一步"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x8"
        android:paddingTop="@dimen/y8"
        android:paddingBottom="@dimen/y8"
        android:gravity="bottom"
        android:background="#F2F2F2"
        android:textSize="14sp"
        android:text="选择场景"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel_scene_set"
        android:background="@color/white"
        android:layout_height="@dimen/y35">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/img_guan_scene"
            android:src="@drawable/icon_changjin_sm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/panel_scene_name_txt"
            android:text="执行某个手动场景"
            android:layout_toRightOf="@+id/img_guan_scene"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未选择"
            android:id="@+id/execute_scene_txt"
            android:layout_marginLeft="@dimen/x8"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x6"
            android:layout_toLeftOf="@+id/scene_set"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/scene_set"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/wode_right_arrow"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x8"
        android:gravity="bottom"
        android:background="#F2F2F2"
        android:textSize="14sp"
        android:text="选择智能设备"/>

    <com.massky.sraumsmarthome.view.XListView
        android:id="@+id/xListView_scan"
        android:layout_width="fill_parent"
        android:dividerHeight="1dp"
        android:divider="#E3E3E3"
        android:layout_height="fill_parent" android:cacheColorHint="#00000000">
    </com.massky.sraumsmarthome.view.XListView>

</LinearLayout>
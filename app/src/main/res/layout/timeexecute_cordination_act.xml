<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/root_layout"
    android:background="#F6F7FA"
    android:layout_height="match_parent">
    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/icon_t_back" />
        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="定时执行条件"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/next_step_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x8"
            android:layout_marginTop="8dp"
            android:text="下一步"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/again_time_exeute_set"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:layout_height="@dimen/y35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/again_time_exeute_txt"
            android:text="重复"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行一次"
            android:id="@+id/again_time_exeute"
            android:layout_marginLeft="@dimen/x8"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x3"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_arrow"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/right_arrow"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x15"
            android:layout_alignParentRight="true"
            android:src="@drawable/wode_right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel_scene_set"
        android:background="@color/white"
        android:layout_height="@dimen/y35">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_scenetime_txt"
            android:text="开启时间"
            android:layout_toRightOf="@+id/img_guan_scene"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未选择"
            android:id="@+id/start_scenetime"
            android:layout_marginLeft="@dimen/x8"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x3"
            android:layout_toLeftOf="@+id/scene_set"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/scene_set"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:src="@drawable/wode_right_arrow"/>
    </RelativeLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/y1"-->
        <!--android:background="@color/gray"></View>-->
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6F7FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/icon_t_back" />
        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="主卫水浸"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!--<TextView-->
            <!--android:id="@+id/next_step_txt"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/x8"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:text="下一步"-->
            <!--android:textSize="14sp"-->
            <!--android:textColor="@color/blue_txt"-->
            <!--/>-->

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/water_in_linear"
        android:layout_marginTop="@dimen/y5"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:text="发生水浸"/>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/x1"-->
            <!--android:background="@color/gray"></View>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/pepole_body_linear"
        android:layout_marginTop="@dimen/y5"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:text="检测报警"/>
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/x1"-->
        <!--android:background="@color/gray"></View>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/door_open_close_linear"
        android:visibility="gone"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="@dimen/x10"
            android:textColor="@color/dark_gray"
            android:text="打开"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="@dimen/x10"
            android:textColor="@color/dark_gray"
            android:text="关闭"/>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/x1"-->
            <!--android:background="@color/gray"></View>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/door_ringeye_linear"
        android:visibility="gone"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="@dimen/x10"
            android:textColor="@color/dark_gray"
            android:text="移动侦测报警"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="@dimen/x10"
            android:textColor="@color/dark_gray"
            android:text="按铃"/>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/x1"-->
            <!--android:background="@color/gray"></View>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/check_person_linear"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:text="检测报警"/>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/x1"-->
            <!--android:background="@color/gray"></View>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/fordoor_close_linear"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="@dimen/x10"
            android:textColor="@color/dark_gray"
            android:text="打开"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="@dimen/x10"
            android:textColor="@color/dark_gray"
            android:text="关闭"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_verify_body_wrong_linear"
            android:padding="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:text="身份验证错误"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="right"
              android:paddingRight="@dimen/x10"
              android:orientation="horizontal"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textColor="@color/dark_gray"
                  android:id="@+id/check_code_txt"
                  android:gravity="center"
                  android:layout_marginRight="@dimen/x5"
                  android:text="3"/>
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/wode_right_arrow"/>
          </LinearLayout>

        </LinearLayout>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/x1"-->
            <!--android:background="@color/gray"></View>-->
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F6F7FA"
    android:layout_height="match_parent">
    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/icon_t_back" />

        <TextView
            android:id="@+id/toolbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="系统消息(1)"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/add_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/y8"
            android:paddingTop="@dimen/y8"
            android:paddingBottom="@dimen/y8"
            android:src="@drawable/icon_bianji"
           />
    </RelativeLayout>

    <com.massky.sraumsmarthome.view.XListView
        android:id="@+id/xListView_scan"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/y5"
        android:dividerHeight="1dp"
        android:divider="#E3E3E3"
        android:layout_height="fill_parent" android:cacheColorHint="#00000000">
    </com.massky.sraumsmarthome.view.XListView>

</LinearLayout>
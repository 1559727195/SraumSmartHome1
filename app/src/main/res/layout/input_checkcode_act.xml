<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:paddingRight="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_t_back"/>

        <TextView
            android:id="@+id/toolbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="输入验证码"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:id="@+id/wode_setting"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@drawable/wode_setting"/>-->
    </RelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="80%">
        <TextView
            android:layout_width="0dp"
            app:layout_widthPercent="70%"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="请输入13812391092收到的短信验证码"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/y30"
            android:id="@+id/txt_check_code"
            android:textColor="@color/dark_gray"/>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_per_lay"
            android:layout_marginTop="@dimen/y15"
            android:layout_below="@+id/txt_check_code"
            android:layout_centerHorizontal="true"
            app:layout_widthPercent="70%">
            <com.massky.sraumsmarthome.view.ClearEditText
                android:id="@+id/edit_password_again"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入验证码"
                android:inputType="text"
                android:maxLength="15"
                app:layout_widthPercent="70%" />

            <TextView
                android:id="@+id/scan_gateway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:gravity="left"
                android:layout_alignParentRight="true"
                android:text="重新发送(35s)" />
        </android.support.percent.PercentRelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:layout_below="@+id/login_per_lay"
            app:layout_widthPercent="70%"></View>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40">

        <Button
            android:id="@+id/btn_login_gateway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add_zigbee_device_btn"
            android:text="下一步"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_widthPercent="80%" />


    </android.support.percent.PercentRelativeLayout>

</LinearLayout>
